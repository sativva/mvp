  width: 100% !important;
  margin-bottom: 15px;
}

.zip_input {
  padding-right: 41px !important;
  padding-left: 20px !important;
  border-top-right-radius: 0 !important;
  border-bottom-right-radius: 0 !important;
  background: white !important;
  border: 1px solid lightgrey !important;
  float: left !important;
  width: 80% !important;
  margin-left: 2px !important;
}
button[disabled] {
  background-color: #9FD59D !important;
}

.marker {
  background-image: url('//cdn.shopify.com/s/files/1/0095/0986/3479/files/marker.png?3962');
  background-size: contain;
  background-repeat:no-repeat;
  width: 20px;
  height: 32px;
  cursor: pointer;
}

.label__checkbox {
  display: none;
}

.label__check {
  display: inline-block;
  border-radius: 50%;
  border: 2px solid rgba(0,0,0,0.1);
  background: white;
  vertical-align: middle;
  margin-right: 15px;
  min-width: 27px;
  width: 2em;
  height: 2em;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: border .3s ease;

  i.icon {
    opacity: 0;
    // font-size: calc(1rem + 1vw);
    color: transparent;
    transition: opacity .3s .1s ease;
    // -webkit-text-stroke: 1px rgba(0,0,0,.5);
  }

  &:hover {
    border: 5px solid rgba(0,0,0,0.2);
  }

}
.label__text {
  display: inline-flex !important;
  text-transform: none !important;
}
.label__checkbox:checked + .label__text .label__check i.icon {
  opacity: 1 !important;
  transition: opacity .3s .1s ease;
  color: $vert_principal !important;

}
.label__checkbox:checked + .label__text .label__check {
  animation: check .5s cubic-bezier(0.895, 0.030, 0.685, 0.220) forwards;
}

.dlvy_center {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%,-50%);
}

@keyframes icon {
  from {
    opacity: 0;
    transform: scale(0.3);
  }
  to {
    opacity: 1;
    transform: scale(1)
  }
}

@keyframes check {
  0% {
    width: 2em;
    height: 2em;
    border-width: 5px;
  }
  10% {
    width: 2em;
    height: 2em;
    opacity: 0.1;
    background: rgba(0,0,0,0.2);
    border-width: 15px;
  }
  12% {
    width: 2em;
    height: 2em;
    opacity: 0.4;
    background: rgba(0,0,0,0.1);
    border-width: 0;
  }
  50% {
    width: 2em;
    height: 2em;
    background: $vert_principal;
    border: 0;
    opacity: 0.6;
  }
  100% {
    width: 2em;
    height: 2em;
    background: white;
    border: 1px solid $vert_principal;
    opacity: 1;
  }
}

.preheader.closed {
  height: initial;
  .container {
    @media only screen and (max-width: 640px){
      width: 80vw;
      // max-height: 60vh;
    }

  }
  .close_popup {
    opacity: 0;
    transition: 1s;
  }
  transition-property: height, width;
  transition-duration: 0.8s;
}

.preheader.open {
  width: 100vw;
  height: 100vh;
  position: sticky;
  top: 0;
  @media only screen and (min-width: 768px){
    margin-left: 50%;
  }
  padding: 5% 0;
  transition-property: height, width;
  transition-duration: 0.8s;

  overflow: scroll;
  // background: rgba(0,0,0, 0.5);



  .container {
    min-height: 100%;
    width: 100vw;
    height: 100vh;
    max-height: 100vh !important;

    overflow: fixed;
    @media only screen and (max-width: 640px){
      width: 80vw;
      max-height: 100vh;
    }
  }

  .close_popup {
    float: right;
    margin-right: 20px;
    cursor: pointer;
    opacity: 1;
    transition: 1s;
  }
}

.Safari .preheader.open {
  @media only screen and (min-width: 768px){
    margin-left: 50%;
  }
}
@keyframes popup {
  0% {
    border-radius: 0;
    width: initial;
    height: initial;

  }
  100% {
    border-radius: 50%;
    width: 100vw;
    height: 100vh;
  }
}

.dlvy_bar {
